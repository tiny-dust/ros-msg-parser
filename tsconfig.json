{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"types": ["node", "vitest/globals"]
	},
	"include": ["**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
