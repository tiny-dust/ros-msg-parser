{
  "name": "ros-msg-parser",
  "version": "0.0.3",
  "description": "ROS消息/服务/动作文件处理脚本集合",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiny-dust/ros-msg-parser"
  },
  "homepage": "https://github.com/tiny-dust/ros-msg-parser#readme",
  "bugs": {
    "url": "https://github.com/tiny-dust/ros-msg-parser/issues"
  },
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "examples": "node dist/cli.js",
    "examples:build": "pnpm build && node dist/cli.js",
    "clean": "rimraf node_modules dist",
    "lint": "biome check ./src",
    "lint:fix": "biome check ./src --write",
    "format": "biome format ./src --write",
    "prepare": "husky",
    "prerelease": "pnpm lint",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ros-msg-parser": "dist/cli.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "biome check ./src --write"
    ]
  },
  "dependencies": {
    "commander": "14.0.0",
    "fs-extra": "^11.2.0",
    "glob": "11.0.3",
    "simple-git": "3.28.0",
    "unconfig": "7.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "8.1.0",
    "@types/node": "^24.3.0",
    "husky": "^9.1.6",
    "lint-staged": "16.2.6",
    "rimraf": "^5.0.5",
    "typescript": "~5.9.2",
    "vite": "7.1.12",
    "vite-plugin-dts": "^4.3.0",
    "release-it": "19.0.5",
    "@release-it/conventional-changelog": "10.0.1"
  }
}
